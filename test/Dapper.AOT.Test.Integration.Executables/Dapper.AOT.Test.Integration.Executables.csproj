<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net6.0;net48</TargetFrameworks>
        <RootNamespace>Dapper.AOT.Test.Integration.Executables</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Dapper" Condition="'$(TargetFramework)'!='net48'" />
        <PackageReference Include="Dapper.StrongName" Condition="'$(TargetFramework)'=='net48'" />

        <ProjectReference Include="..\..\src\Dapper.AOT\Dapper.AOT.csproj" />
    </ItemGroup>

	
	<!-- Copy the UserCode\*.cs files to output also changing the extension to txt -->
	<ItemGroup>
		<UserCodeFiles Include="UserCode\*.cs" />
	</ItemGroup>
    <Target Name="CopyUserSourceCode" BeforeTargets="Build">
        <Copy SourceFiles="@(UserCodeFiles)" DestinationFiles="@(UserCodeFiles->Replace('.cs', '.txt'))"/>
    </Target>
    <ItemGroup>
        <None Update="UserCode\*.txt" CopyToOutputDirectory="PreserveNewest" />
        <None Update="UserCode\*.txt">
            <DependentUpon>$([System.String]::Copy(%(Filename)).Replace('.txt', '.cs'))</DependentUpon>
        </None>
    </ItemGroup>

</Project>
